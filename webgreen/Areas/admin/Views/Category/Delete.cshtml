@model cats
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/css/stylesheet.css" rel="stylesheet" />
    <title>Editing Category</title>

    <style>
        .form-group {
            padding-top: 20px;
        }

        #submitCat {
            padding-top: 20px;
        }
    </style>
</head>
<body>



    <form method="post">
        <div class="row">
            <div class="col-lg-6"

               <div class="card" style="width: 500px; height: 290px; padding-bottom: 28px; background-color:darkgrey; border-bottom-color:dimgray;">
                   <div class="card-body">
                       <h2 class="text-focus-in">Delete Category</h2>

                   <div class="container">
                       <div class="form-group row" style="display: flex; align-items: center;">
                           <div class="col-sm-4">
                               <label for="name">Category Name</label>
                           </div>
                           <div class="col-sm-6">
                            <input asp-for="name" disabled placeholder="Enter your name">
                            <span asp-validation-for="name" class="text-danger"></span>
                           </div>
                       </div>
                       <div class="form-group row" style="display: flex; align-items: center;">
                           <div class="col-sm-4">
                               <label for="displayorder">Display Order</label>
                           </div>
                           <div class="col-sm-6">
                               <input asp-for="displayorder"  disabled placeholder="Display number">
                            <span asp-validation-for="displayorder" class="text-danger"></span>

                           </div>
                       </div>
                       <div class="form-group row">
                           <div class="col-sm-6">
                               <button type="submit" class="btn btn-primary" style="margin-left: 75px;">Delete</button>

                           </div>
                           <div class=" col-sm">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="margin-right: 75px;"> Go Back</a>
                           </div>
                       </div>
                   </div>
                   </<div>

               </div>
               </div>


               </div>
           </div>

    </form>



    <!-- Include Bootstrap JS and dependencies -->

</body>
</html>